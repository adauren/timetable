extends layout

block content

  .container.mt-4.mb-4
    if groups.length > 0
      form(action=`/lessons/create`, method="POST")
        .form-row
          .form-group.col-md-6.offset-md-3
            label(for="facultyName") Выберите Факультет
            select(required="true")#facultyName.form-control
              for faculty in faculties
                option(value=`${faculty.id}`)= faculty.name
          .form-group.col-md-6.offset-md-3
            label(for="specialtyName") Выберите Специальность
            select(required="true")#specialtyName.form-control
          .form-group.col-md-6.offset-md-3
            label(for="groupName") Выберите Группу
            select(name="groupName", required="true")#groupName.form-control
          .form-group.col-md-6.offset-md-3
            label(for="inputState") Название Предмета
            input(name="subject").form-control
          .form-group.col-md-6.offset-md-3
            label(for="inputState") Кабинет
            input(name="room").form-control
          .form-group.col-md-6.offset-md-3
            label(for="inputState") Тип занятия
            select(name="type", required="true").form-control
              option(value="Лекция") Лекция
              option(value="Лабораторное занятие") Лабораторное занятие
              option(value="Практическое занятие") Практическое занятие
          .form-group.col-md-6.offset-md-3
            label(for="inputState") Время
            select(name="day", required="true").form-control
              option(value="Понедельник") Понедельник
              option(value="Вторник") Вторник
              option(value="Среда") Среда
              option(value="Четверг") Четверг
              option(value="Пятница") Пятница
          .form-group.col-md-6.offset-md-3
            label(for="inputState") Время
            select(name="time", required="true").form-control
              option(value="1") 08:30 - 09:20
              option(value="2") 09:35 - 10:25
              option(value="3") 10:40 - 11:30
              option(value="4") 11:45 - 12:35
              option(value="5") 12:50 - 13:40
              option(value="6") 14:00 - 14:50
              option(value="7") 15:05 - 15:55
              option(value="8") 16:10 - 17:00
              option(value="9") 17:15 - 18:05
              option(value="10") 18:20 - 19:10
              option(value="11") 19:25 - 20:15
              option(value="12") 20:30 - 21:20
              
            
          button(type="submit", style="background-color: #7d71b1").btn.btn-primary.col-md-6.offset-md-3 Создать Занятие
    else 
      h5 Список групп пуст. Вы должны сначала добавить как минимум одну группу
  
  script(src="../js/create-lesson.js")